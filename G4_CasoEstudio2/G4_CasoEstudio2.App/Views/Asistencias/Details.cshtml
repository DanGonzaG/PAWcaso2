@model G4_CasoEstudio2.App.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<h4>Usuarios Registrados (@Model.Asistencias.Count/@Model.CupoMaximo)</h4>

<div class="alert alert-info">
    <strong>Debug Info:</strong><br>
    Asistencias es null: @(Model.Asistencias == null)<br>
    Cantidad de asistencias: @Model.Asistencias.Count<br>
    Primer usuario cargado: @(Model.Asistencias.FirstOrDefault()?.Usuario != null)
</div>

@if (Model.Asistencias.Any())
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Asistencia ID</th>
                <th>Usuario ID</th>
                <th>Nombre</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asistencia in Model.Asistencias)
            {
                <tr>
                    <td>@asistencia.Id</td>
                    <td>@asistencia.UsuarioId</td>
                    <td>@(asistencia.Usuario?.NombreCompleto ?? "NULO")</td>
                    <td>@(asistencia.Usuario?.Email ?? "NULO")</td>
                </tr>
            }
        </tbody>
    </table>
}