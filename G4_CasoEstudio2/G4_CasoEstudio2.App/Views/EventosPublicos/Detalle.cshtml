@model G4_CasoEstudio2.App.Models.Evento

@{
    ViewData["Title"] = "Detalle del Evento";
}

<h2>Detalle del Evento</h2>

<div class="card shadow rounded p-4 mt-3">
    <h3 class="card-title text-primary">@Model.Titulo</h3>
    <p class="text-muted mb-1">Categoría: <strong>@Model.Categoria?.Nombre</strong></p>

    <dl class="row mt-3">
        <dt class="col-sm-3">Fecha</dt>
        <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Hora</dt>
        <dd class="col-sm-9">@Model.Hora</dd>

        <dt class="col-sm-3">Ubicación</dt>
        <dd class="col-sm-9">@Model.Ubicacion</dd>

        <dt class="col-sm-3">Cupo máximo</dt>
        <dd class="col-sm-9">@Model.CupoMaximo</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary mt-3">← Volver a la lista</a>
</div>
