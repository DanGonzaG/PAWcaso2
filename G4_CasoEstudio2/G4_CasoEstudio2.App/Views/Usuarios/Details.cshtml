@model G4_CasoEstudio2.App.Models.Usuario
@using Microsoft.AspNetCore.Identity
@inject UserManager<G4_CasoEstudio2.App.Models.Usuario> UserManager

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h1>Detalles del Usuario</h1>

<div>
    <h4>Información del Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class="col-sm-10">
            @{
                var roles = await UserManager.GetRolesAsync(Model);
                @(roles.FirstOrDefault() ?? "Usuario")
            }
        </dd>
        <dt class="col-sm-2">
            Nombre de Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Email Confirmado
        </dt>
        <dd class="col-sm-10">
            @(Model.EmailConfirmed ? "Sí" : "No")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
</div>